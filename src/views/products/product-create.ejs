<!DOCTYPE html>
<!DOCTYPE html>
<html lang="es">
    
    <%- include('../partials/head') %>

    <body>
        
        <%- include('../partials/header') %>

        <main>          
            <form >
                <div class="foto">
                    <i class="fa-solid fa-circle-user"></i>
                    <button class="add" type="button">
                        <i class="fa-solid fa-circle-plus"></i>
                    </button>
                </div>
                    <!-- name -->
                <div class="casilla">
                    <label for="name" class="form-label">Nombre: </label>
                   
                    <input class="nombre_y_apellido" type="text" name="name" id="name" placeholder="Ingrese el nombre del producto" minlength="8"required>
                    <span class="feedback"></span>
                </div>
                <!-- description -->
                <div class="casilla">
                    <label for="description" class="form-label">Descripción: </label>
                   
                    <input type="text" name="description" id="descrition" placeholder=" Descripción del producto" >
                    <span class="feedback"></span>
                </div>
                 <!-- price -->
                 <div class="casilla">
                    <label for="price" class="form-label">Precio:</label>
                    
                    <input type="text" name="price" id="price" placeholder="$00.00" required>
                    <span class="feedback"></span>
                </div>
                <!-- category -->
                <div class="casilla">
                    <label for="category" class="form-label">Categoría: </label>
                    <select name="category" id="category" class="form-input">
                        <option value="">Elegí</option>
                        <option value="indumentaria">Indumentaria</option>
                        <option value="accesorios">Accesorios</option>
                        <option value="decorativos">Decorativos</option>
                        <option value="clase-cursos">Clases y/o cursos</option>
                    </select>
                </div>
                <!-- subcategory -->
                <!-- <div class="casilla">
                    <label for="subcategory" class="form-label">Categoría:</label>
                    <select name="subcategory" id="subcategory" class="form-input">
                        <option value="">Elegí</option>
                        <option value="indumentaria">Indumentaria</option>
                        <option value="accesorios">Accesorios</option>
                        <option value="decorativos">Decorativos</option>
                        <option value="clase-cursos">Clases y/o cursos</option>
                    </select>
                </div> -->
                <!-- quality -->
                <div class="casilla">
                    <label for="quality" class="form-label">Talle: </label>
                    <select name="quality" id="quality" class="form-input">
                        <option value="">Elegí</option>
                        <option value="t-s">Talle S</option>
                        <option value="t-m">Talle M</option>
                        <option value="t-l">Talle L</option>
                        <option value="t-xl">Talle XL</option>
                        <option value="t-xxl">Talle XXL</option>
                    </select>
                </div>



                <div class="botones">
                    <button type="submit">Enviar</button>
                    <button type="reset" action="/">Borrar</button>
                </div>
            </form>
        </main>

        <%- include('../partials/footer') %>
        
    </body>
</html>