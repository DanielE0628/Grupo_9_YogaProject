<!DOCTYPE html>
<html lang="es">

    <%- include('../partials/head', { title: 'Productos', estilo: '/stylesheets/productos-style.css' }) %>

    <body>
       
        <%- include('../partials/header') %>

            <main class="contenedor-main">
               
                <div class="contenedor-main-rutas">
                    <a href="/">inicio</a>
                    <a href="/products/create">Crear Productos</a>
                </div>
                <div class="contenedor-main-padre">
                    <section class="contenedor-main-productos">
                        <% products.forEach(products=> { %>
                            <% { %>

                                <article class="contenedor-main-productos-articulos">

                                    <div class="contenedor-main-productos-articulos-imagen">
                                        <img src="/images/products/<%= products.image %>" alt="imagen-de-producto">
                                    </div>
                                    <div class="contenedor-main-productos-articulos-detalles">
                                        <div>
                                            <h2>
                                                <%= products.name %>
                                            </h2>
                                        </div>
                                        <div>

                                        </div>
                                        <% if(products.discount == 0){ %>
                                        <div>
                                            <h2>
                                             $ <%= products.price %> 
                                            </h2>
                                        </div>
                                        <% } else { %>
                                        <div>
                                            <h2>
                                            ¡Oferta! $ <%= (products.price -(products.price*(products.discount/100))) %> 
                                            </h2>
                                        </div>
                                        	
                                        <div>
                                            <h2>
                                                 <%= products.discount %> % OFF
                                            </h2>
                                        </div>
                                        <% } %>
                                        <div>
                                            <h3>
                                                 Categoria: <%= products.categorys.nombre %>
                                            </h3>
                                        </div>
                                        <div>
                                            <h4>
                                                 Lanzamiento: <%= products.created_at %>
                                            </h4>
                                        </div>
                                        <div class="action-button edit">
                                            <a href="/products/detail/<%= products.id %>">Detalles</a>
                                        </div>
                                        <div class="contenedor-main-productos-articulos-button ">
                                            <button><i class="fa-solid fa-cart-plus"></i></button>
                                            <button type="submit" class="add-to-cart" name="comprar" id="<%=products.id%>">
                                                Comprar
                                            </button>
                                        </div>
                                    </div>
                                </article>
                                <% } %>
                                    <% }) %>
                    </section>

                    <!-- section FILTRO -->
                    <button class="filtro-button">
                        <i class="fa-solid fa-bars"></i>
                    </button>

                    <section class="filtro">
                        <form action="/products/filter/" method="post" class="filtro-form" value="filter">
                            
                        
                            <div class="filtro-checkbox"  >
                                <!-- //menu categoryas -->
                                
                                <h3>CATEGORIAS</h3>
                        <% for (i=0; i < allCategorys.length;i++) { %>  
                            <ul>  
                                <li>
                                <label><input type="checkbox" name="category"  value="<%= allCategorys[i].id %>"><%= allCategorys[i].nombre %>
                                </li>
                            </ul>  
                            <% } %>
                            </div>
                            <div class="filtro-checkbox">
                                <h3>MARCA</h3>
                                <% for (i=0; i < allMarcas.length;i++) { %>  
                                <ul>  
                                    <li>
                                    <label><input type="checkbox" name="marca" value="<%= allMarcas[i].id %>"><%= allMarcas[i].nombre %>
                                    </li>
                                </ul>  
                                <% } %>
                            </div>
                            <!-- <div class="filtro-talles">
                                <h3>Talle</h3>
                                <label><input type="radio" name="XS">XS</label>
                                <label><input type="radio" name="S">S</label>
                                <label><input type="radio" name="M">M</label>
                                <label><input type="radio" name="L">L</label>
                                <label><input type="radio" name="XL">XL</label>
                                <label><input type="radio" name="XXL">XXL</label>
                            </div> -->
                            <div class="filtro-order">
                                <h3>ORDEN</h3>
                                
                                <label><input type="radio" name="orderPrice" value="1">Menor precio</label>
                                <label><input type="radio" name="orderPrice" value="2" >Mayor precio</label>
                             
                                <label><input type="radio" name="orderAlfa" value="1">A-Z</label>
                                <label><input type="radio" name="orderAlfa" value="2">Z-A</label>
                                
                                <label><input type="radio" name="orderDate" value="created_at">Fecha de lanzamiento</label>
                            </div>
                            <!-- <label class="contenedor-main-filtro-lista-boton-borrar">
                                <button type="reset" name="resetear">Borrar</button>
                            </label> --> 
                            <div >
                                <button type="submit" class="filtro-buttons">Filtrar</button>
                                <button type="reset" class="filtro-buttons">Restablecer</button>
                            </div>
                        </form>
                    </section>

                    <!-- section ofertas -->
                    <div class="title">
                        <h1>¡¡¡OFERTAS!!!</h1>
                    </div>
                    <section class="contenedor-main-productos">
                        <% products.forEach(products=> { %>
                            <% { %>
                                <% if(products.discount > 0){ %>
                                <article class="contenedor-main-productos-articulos">

                                    <div class="contenedor-main-productos-articulos-imagen">
                                        <img src="/images/products/<%= products.image %>" alt="imagen-de-producto">
                                    </div>
                                    <div class="contenedor-main-productos-articulos-detalles">
                                        <div>
                                            <h2>
                                                <%= products.name %>
                                            </h2>
                                        </div>
                                        <div>

                                        </div>
                                        <div>
                                            <h2>
                                            ¡Oferta! $ <%= (products.price -(products.price*(products.discount/100))) %> 
                                            </h2>
                                        </div>
                                        	
                                        <div>
                                            <h2>
                                                 <%= products.discount %> % OFF
                                            </h2>
                                        </div>
                                        
                                        <div>
                                            <h3>
                                                 Categoria: <%= products.categorys.nombre %>
                                            </h3>
                                        </div>
                                        <div class="action-button edit">
                                            <a href="/products/detail/<%= products.id %>">Detalles</a>
                                        </div>
                                        <div class="contenedor-main-productos-articulos-button">
                                            <button><i class="fa-solid fa-cart-plus"></i></button>
                                            <button type="submit" name="comprar">
                                                Comprar
                                            </button>
                                        </div>
                                    </div>
                                </article>
                                <% } %>
                                <% } %>
                                    <% }) %>
                    </section>
                </div>
            </main>

            <%- include('../partials/footer') %>

    </body>

</html>