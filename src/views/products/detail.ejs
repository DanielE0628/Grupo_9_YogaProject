<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Detalle producto', estilo:'/stylesheets/usersRegister-style.css'}) %>
<body>
	<!-- Header -->
	<%- include('../partials/header') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="center" >
		<div >
			<div >
				<h2 class="products-title">Detalle del producto: <%= product.name %></h2>
			</div>
		</div>
		<div class="product-detail">
			<div >
				<!-- imagen -->
				<div class="foto product-detail-img ">
					<img src="/images/products/<%= product.image %>" alt="product image" class="product-detail-img">
					<!-- Descripción -->
					<p class="campo">
						<%= product.description %>
					</p>
				</div>
				<div class="campo">
					<article class="product-detail-info">
						<!-- Nombre -->
						<h2 class="product-detail-title"><%= product.name %></h2>
						<!-- Categoria -->
						<h3 class="product-detail-title">Categoria: <%= product.categorys.nombre %></h3>
						<!-- Marca -->
						<h4 class="product-detail-title">Marca: <%= product.marcas.nombre %></h4>
						<!-- Talle -->
						<% if(product.category_id == 1){ %>
						<h4 class="product-detail-title">Talle: <%= product.talles.nombre %></h4>
						<% } %>
						
						<p class="product-detail-price small">
							<!-- Precio -->
							<span>$ <%= product.price %></span>
						
							<% if(product.discount > 0){ %>	
							</p>
							<!-- Descuento -->
							<p class="product-detail-price">
								Descuento <%= product.discount %> % OFF
							</p>
							<p class="product-detail-price">
								Costo Final: $ <%= product.finalPrice %> 
							</p>
							<% } %>
							<!-- Stock -->
							<p class="product-detail-price">
								Stock: <%= product.stock %>
							</p>

						<ul class="actions-list">
							<li>
								<i class="fas fa-credit-card"></i>
								<p>Pagá en 12 cuotas sin interes</p>
							</li>
							<li>
								<i class="fas fa-store"></i>
								<p>Retiro gratis en locales del vendedor</p>
							</li>
						</ul>

						<a href="#" class="botones">COMPRAR AHORA</a>
						<hr>

						<a href="/products/edit/<%= product.id %>" class="botones">EDITAR PRODUCTO</a>
						<form action="/products/delete/<%= product.id %>?_method=DELETE" method="POST">
							<button type="submit" class="action-button delete">ELIMINAR PRODUCTO</button>
						</form>

						<!-- <hr> -->

						<form action="/products/delete/img/<%= product.id %>?_method=DELETE" method="POST">
							<button type="submit" class="botones">ELIMINAR IMAGEN</button>
						</form>
					</article>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
    <%- include('../partials/footer') %>
	<!-- /footer -->

</body>	
</html>