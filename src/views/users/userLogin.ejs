<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head', {title: 'Ingresar' , estilo:'/stylesheets/usersLogin-style.css'}) %>


    <body>

        <%- include('../partials/header') %>

            <main>
                <form name="Login" action="/users/login" method="post">

                    <div class="foto">
                        <i class="fa-solid fa-circle-user"></i>
                    </div>

                    <div class="campo">
                        <i class="fa-solid fa-at"></i>
                        <input type="email" name="email" id="email" placeholder="e-mail" required>

                        <% if (locals.error && errors.email) { %>
                            <span class="feedback text-danger">
                                hola
                                <%= errors.email.msg %>
                            </span>
                            <% } %>


                    </div>

                    <div class="campo">
                        <i class="fa-solid fa-unlock"></i>
                        <input type="password" name="password" id="password" placeholder="Contraseña" minlength="7"
                            required>
                        <span class="feedback"></span>
                    </div>
                    <div class="recordar">

                        <input type="checkbox" name="recordar">
                        <p>
                            Recordar Usuario
                        </p>

                    </div>

                    <div class="botones">
                        <button type="submit">Ingresar</button>
                    </div>

                    <div class="forgot">
                        <a class="text-register" href="/users/register">¡Crear usuario!</a>
                        <a class="text-forgot" href="/">¿Olvidó su contraseña?</a>
                    </div>
                </form>
            </main>

            <%- include('../partials/footer') %>

    </body>

</html>