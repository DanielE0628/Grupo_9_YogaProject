<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head', {title: 'Ingresar' , estilo:'/stylesheets/usersLogin-style.css'}) %>


    <body>

        <%- include('../partials/header') %>

            <main>
                <form name="Login" action="/users/login" method="post">

                    <div class="foto">
                        <i class="fa-solid fa-circle-user"></i>
                    </div>

                    <div class="campo">
                        <i class="fa-solid fa-at"></i>
                        <input type="email" name="email" id="email" placeholder="e-mail" required>
                    </div>

                    <% if ( locals.errors && errors.email) { %>
                        <p class="text-danger">
                            <%= errors.email.msg %>
                        </p>
                    <% } %>


                    <div class="campo">
                        <i class="fa-solid fa-unlock"></i>
                        <input 
                            type="password" 
                            name="password" 
                            id="password" 
                            placeholder="Contraseña" 
                            minlength="7"
                            required>
                    </div>

                    <div class="recordar">
                        <input type="checkbox" name="recordar">
                        <label>
                            Recordar Usuario
                        </label>
                    </div>

                    <div class="botones">
                        <button type="submit">Ingresar</button>
                    </div>

                    <div class="forgot">
                        <a class="text-left" href="/users/register">¡Crear usuario!</a>
                        <a class="text-right" href="/">¿Olvidó su contraseña?</a>
                    </div>
                </form>
            </main>

            <%- include('../partials/footer') %>
            <script src="/js/users/userLogin.js"></script>
    </body>

</html>