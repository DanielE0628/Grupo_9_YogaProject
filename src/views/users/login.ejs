<!DOCTYPE html>
<html lang="es">
    
    <%- include('../partials/head') %>

    <body>
        
        <%- include('../partials/header') %>

        <main>
            <form action="">

                <div class="foto">
                    <i class="fa-solid fa-circle-user"></i>
                </div>

                <div clas="e-mail">
                    <i class="fa-solid fa-at"></i>
                    <input type="email" name="email" id="email" placeholder="e-mail" required>
                    <span class="feedback"></span>
                </div>

                <div class="password">
                    <i class="fa-solid fa-unlock"></i>
                    <input type="password" name="pasword" id="password" placeholder="Contraseña" minlength="8" required>
                    <span class="feedback"></span>
                </div>

                <div class="botones">
                    <button type="submit">Ingresar</button>
                </div>

                <div class="forgot">
                    <a class="text-register" href="/users/register">¡Crear usuario!</a>
                    <a  class="text-forgot" href="/">¿Olvidó su contraseña?</a>
                </div>
            </form>
        </main>

        <%- include('../partials/footer') %>
        
    </body>
</html>